<h1>Login</h1>

<%= form_tag sessions_path do %>
    <% flash.each do |key, msg| %>
        <div><%= msg %></div>
    <% end %>

    <%= label_tag :user_name %>
    <%= text_field_tag :user_name, params[:user_name] %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag "Log in" %>

<% end %>
